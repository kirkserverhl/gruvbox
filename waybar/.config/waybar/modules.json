  // Clock
  "clock": {
    "format": "{:%H:%M %a}",
    "on-click": "ags toggle calendar",
    "on-click-right": "~/scripts/pomodorolm.sh",
    "tooltip-format": "Left: Calendar\nRight: Pomodoro"
  },

  // System
  "custom/system": {
