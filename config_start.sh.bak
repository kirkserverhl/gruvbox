#!/bin/bash

CONFIG_FILE="$HOME/config_check.sh"
CONFIG_SCRIPT="$HOME/.dotfiles/config.sh"

# Ensure the config_check.sh file exists
if [[ ! -f "$CONFIG_FILE" ]]; then
    echo "run" > "$CONFIG_FILE"
    STATUS="run"
else
    STATUS=$(cat "$CONFIG_FILE")
fi

# If status is "off", exit the script
if [[ "$STATUS" == "off" ]]; then
    exit 0
fi

# Open a terminal (Ghostty or default) and prompt the user
TERMINAL="ghostty"
if ! command -v $TERMINAL &>/dev/null; then
    TERMINAL="x-terminal-emulator" # Fallback to default terminal
fi

##$TERMINAL -e bash -c '
echo "The following steps will help Optimize your Hyprland Setup and are optional."
read -p "Perform Optimization configuration? (Y/N): " choice
if [[ "$choice" == "Y" || "$choice" == "y" ]]; then
    bash "'"$CONFIG_SCRIPT"'"
    echo "The configuration script has completed!! "
fi

read -p "Press ENTER to exit..."

